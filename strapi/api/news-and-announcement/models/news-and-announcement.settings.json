{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "name": "News & Announcements",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "header": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "canvas_preview": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "dynamic_content": {
      "type": "dynamiczone",
      "components": [
        "content-sections.grid-image",
        "content-sections.text-content",
        "content-sections.carousal-image"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "tags": {
      "via": "news",
      "collection": "tag",
      "dominant": true
    },
    "seo_link": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "string",
      "required": true,
      "unique": false,
      "regex": "^[a-z]\\S*$",
      "minLength": 5
    },
    "download": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "common.file-download"
    },
    "menus": {
      "via": "news_announcement",
      "collection": "menus"
    },
    "main_menus": {
      "via": "news_announcement",
      "collection": "main-menus"
    }
  }
}
